/* pages/login/login.wxss */
.userAvatarUrl{
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.userNickName{
  font-size: 20px;
  color: #333333;
}

.userInfoBtn{
  margin-top: 20px;
  color: white;
  background: green;
}

.content{
  position: relative;  
  width: 100%;  
  height: 50%;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center; 
  top: 25%;
  bottom: 25%;
}

/*
