/* pages/my/my.wxss */
.container{
  width:100%;
  min-height: 100%;
  display:flex;
  flex-direction: column;
  background-color: #fff;
}

.my-title{
  width: 100%;
  height: 300rpx;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
}

.my-title-left{
  display: flex;
  flex-direction: column;
}

.userAvatarUrl{
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin-left: 20px;   
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.userNickName{
  font-size: 20px;
  color: #333333;
  margin-left: 25px;
  margin-top: 10px;
}

.my-title-right{
  display: flex;
  flex-direction: column;
  padding-top: 20px;
  margin-left: 20px;
}

.my-title-right text{
  font-size: 15px;
  font-weight: 100;
  color: #747372;
}

.dividing-line{
  width: 100%;
  height: 2rpx;
  background: #000000;
}
.my-item{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
}
.my-item-icon{
  width: 80rpx;
  height: 80rpx;
  margin-top: 16px;
}
.my-item-text{
  margin-left: 10rpx;
  font-size: 45rpx;
  font-weight: 400;
  margin-top: 20px;
}
.my-item-arrow{
  width: 80rpx;
  height: 80rpx;
  margin-top: 16px;
  position: absolute;
  right: 30rpx;
}

.my-item-number{
  width: 100px;
  margin: 0 auto;
  text-align: center;
  background: #ffffff;
  border: 1rpx solid #cccccc;
  border-radius: 10px;
  margin-top: 20px;
  position: absolute;
  right: 50rpx;
}

.item{
  width: 90%;
  height: 120rpx;
  margin-left: 5%;
}

.line{
  width: 570rpx;
  height: 2px;
  margin-left: 90rpx;
  margin-right: 5%;
  background: #000000;
}