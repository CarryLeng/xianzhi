      <image class="my-item-arrow" src="./images/arrow.png" bindtap="orderInfo"/>
    </view>
    <view class='line'></view>
  </view>

  <view class="item">
    <view class="my-item">
      <image class="my-item-icon" src="./images/search.jpg"/>
      <view class="my-item-text">客户服务</view>
      <view class="my-item-number">0793-XXXX</view>
    </view>
    <view class='line'></view>
  </view>

  <view class='dividing-line' style="margin-top:30px;"></view>
  
