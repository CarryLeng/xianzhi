/* pages/orderInfo/orderInfo.wxss */
.content{
  width:100%;
  min-height: 100%;
  display:flex;
  flex-direction: column;
  background-color: #f2f2f2;
}

.title-bar{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  padding-top: 15rpx;
}

.title-bar-item{
  font-size: 12px;
  font-weight: 100;
  margin-left: 14px;
}

.hr{
  height: 1px;
  background-color: rgb(121, 131, 131);
}

.order-info-item{
  width: 98%;
  height: 350rpx;
  margin-left: 1%;
  margin-top: 50rpx;
  border: 1px solid black;
  border-radius: 15px;
}

.order-info-title,
.order-info-goods {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
}

.order-info-icon{
  width: 150rpx;
  height: 150rpx;
  padding: 10rpx;
  margin-left: 30rpx;
}

.order-info-name{
  width: 360rpx;
  margin-left: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order-info-button{
  position: absolute;
  right: 15px;
  font-size: 12px;
  font-weight: 100;
  color: #726f6f;
  padding: 10rpx;
  border: 1px solid black;
  border-radius: 5px;
}