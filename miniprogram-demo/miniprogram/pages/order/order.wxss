/* pages/order/order.wxss */
.content{
  background: #f2f2f2;
}

.goods_icon{
  width: 100%;
  height: 460rpx;
}

.goods_info{
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-left: 5%;
  margin-top: 20px;
}

.goods_info view{
  margin-left: 20px;
}

.goods_info_icon{
  width: 100px;
  height: 100px;
}

.goods_price{
  font-size: 26px;
  color: #ff0000;
}

.goods_id{
  margin-top: 15px;
}

.goods_number{
  font-size: 23px;
  font-weight: bold;
  margin-left: 5%;
  margin-top: 10px;
}

.goods_number_layout{
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-left: 5%;
}

.goods_reduce, .goods_plus{
  font-size: 35px;
}

.input_bg{
  border: 1rpx solid #cccccc;
  width: 190px;
  height: 40px;
  margin: 0 auto;
  background: #ffffff;
  border-radius: 5px;
  margin-top: 10px;
}

.input_bg view{
  margin-top: 14rpx;
  margin-left: 20rpx;
}

.input_bg input{
  font-size: 26px;
}

.radio-group{
  margin-left: 20px;
}

.goods_bottom{
  position: absolute;
  bottom: 20px;
  width: 100%;
  height: 30px;
}

.place_order{
  width: 100%;
  height: 30px;
  font-size: 20px;
  color: #ffffff;
  background: #ff0000;
  margin: 0 auto;
}